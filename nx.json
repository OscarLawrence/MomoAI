{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/*.md"
    ],
    "sharedGlobals": [],
    "pythonSrc": [
      "{projectRoot}/**/*.py",
      "{projectRoot}/pyproject.toml",
      "{projectRoot}/uv.lock"
    ]
  },
  "targetDefaults": {
    "format": {
      "cache": true,
      "inputs": ["pythonSrc"]
    },
    "typecheck": {
      "cache": true,
      "inputs": ["pythonSrc"],
      "dependsOn": ["format"]
    },
    "test-fast": {
      "cache": true,
      "inputs": ["pythonSrc"],
      "dependsOn": ["^test-fast", "typecheck"]
    },
    "test-all": {
      "cache": true,
      "inputs": ["pythonSrc"],
      "dependsOn": ["^test-all", "typecheck"]
    },
    "benchmark": {
      "cache": false
    },
    "dvc-repro": {
      "cache": false,
      "dependsOn": ["format", "typecheck"]
    },
    "dvc-pull": {
      "cache": false
    },
    "dvc-push": {
      "cache": false
    },
    "dvc-ingest": {
      "cache": false,
      "dependsOn": ["test-all"]
    }
  },
  "plugins": [
    {
      "plugin": "@nxlv/python",
      "options": {
        "packageManager": "uv"
      }
    }
  ],
  "generators": {
    "@nx/js:library": {
      "unitTestRunner": "jest"
    }
  },
  "nxCloudId": "68973190401d09404119fbc8"
}
