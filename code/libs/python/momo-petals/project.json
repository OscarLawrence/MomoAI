{
  "name": "momo-petals",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "code/libs/python/momo-petals",
  "targets": {
    "build": {
      "executor": "@nx/python:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/code/libs/python/momo-petals"
      }
    },
    "test": {
      "executor": "@nx/python:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "testRunner": "pytest"
      }
    },
    "lint": {
      "executor": "@nx/python:lint",
      "options": {
        "linter": "ruff"
      }
    },
    "format": {
      "executor": "@nx/python:format",
      "options": {
        "formatter": "black"
      }
    }
  },
  "tags": ["python", "library", "petals", "distributed-inference"]
}
