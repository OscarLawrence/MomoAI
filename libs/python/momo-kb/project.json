{
  "name": "momo-kb",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/python/momo-kb/momo_kb",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:lock",
      "options": {
        "update": false
      }
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "options": {
        "lintFilePatterns": [
          "momo_kb",
          "tests",
          "benchmarks"
        ]
      },
      "cache": true
    },
    "format": {
      "executor": "@nxlv/python:ruff-format",
      "options": {
        "filePatterns": [
          "momo_kb",
          "tests",
          "benchmarks"
        ]
      },
      "cache": true
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run python -m pytest tests/",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "typecheck": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run python -m pyright momo_kb",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "test-fast": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run python -m pytest tests/unit/ tests/e2e/",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "test-all": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run python -m pytest tests/ --cov=momo_kb --cov-report=term-missing --benchmark-skip",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "benchmark": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run python -m pytest benchmarks/ --benchmark-only --benchmark-json=../../../benchmark_results/momo-kb.json",
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "verbose": false,
        "debug": false
      }
    },
    "dvc-repro": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["dvc repro"]
      }
    },
    "dvc-pull": {
      "executor": "nx:run-commands", 
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["dvc pull"]
      }
    },
    "dvc-push": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["dvc push"]
      }
    },
    "kb-ingest": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "dvc repro kb-ingest",
          "dvc push"
        ]
      },
      "dependsOn": ["test-all"]
    }
  },
  "implicitDependencies": [
    "momo-logger",
    "momo-vector-store",
    "momo-graph-store",
    "momo-store-document"
  ],
  "tags": [
    "python",
    "library",
    "kb",
    "multi-agent"
  ]
}